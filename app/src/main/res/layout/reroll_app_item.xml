<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reroll_app_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/reroll_app_item_artwork"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"

        android:src="@android:color/darker_gray"
        android:translationZ="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="8dp" />

    <TextView
        android:id="@+id/reroll_app_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:text="Konosuba : FD"

        android:textColor="@android:color/white"

        android:textSize="24sp"
        android:textStyle="bold"
        android:translationZ="999dp"

        app:layout_constraintEnd_toStartOf="@+id/reroll_app_item_setting_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reroll_app_item_packageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="999dp"
        android:paddingStart="6dp"

        android:text="com.nexon.konosuba"

        android:textColor="@android:color/white"
        android:textSize="12sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reroll_app_item_title" />

    <ImageButton
        android:id="@+id/reroll_app_item_setting_button"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"

        android:paddingHorizontal="20dp"
        android:scaleType="fitCenter"

        android:src="@drawable/ic_app_settings"
        android:translationZ="990dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/reroll_app_item_reroll_button"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"

        android:paddingHorizontal="20dp"
        android:scaleType="fitCenter"

        android:src="@drawable/ic_app_reroll"
        android:translationZ="990dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.993"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>